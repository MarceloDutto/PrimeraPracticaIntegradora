<div class="container">
    <div class="page-title">
        <h1>¡Ingresa a tu cuenta!</h1>
    </div>

    <div class="form-container">
        <form action="" id="loginForm">
            <div>
                <label for="">Correo electrónico</label>
                <input type="text" name="email" required>
            </div>
            <div>
                <label for="">Contraseña</label>
                <input type="password" name="password" required>
            </div>

            <button class="submitButton" type="submit">Iniciar sesion</button>
        </form>
    </div>

    <div class="foot">
        <p class="p-info">¿No tenés cuenta? Registrate <a href="http://localhost:3000/signup">aquí</a>.</p>
    </div>

    <div class="loginDiv">
        <div class="line"></div>
        <div>
            <p class="p-info">O ingresá con tu cuenta de</p>
        </div>
        <a href="/api/auth/github"><button class="loginButton"><img src="/img/githubLogo.png" alt="login con Github" class="loginGithubImg"></button></a>
    </div>
</div>

<script src="/js/login.js"></script>
